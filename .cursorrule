{
    "version": "1.0",
    "interaction": {
        "style": {
            "responseStyle": "concise",
            "focusOnCodeChanges": true,
            "minimizeExplanations": true
        },
        "gitIntegration": {
            "enabled": true,
            "autoCommit": {
                "trigger": "userCommand",
                "keywords": ["提交"],
                "autoPush": true
            }
        },
        "autoCompileAndTest": {
            "enabled": true,
            "triggers": [
                "configChange",
                "fileChange"
            ],
            "skipConfirmation": true
        }
    },
    "autoCompile": {
        "enabled": true,
        "command": "./gradlew clean assembleDebug",
        "triggers": [
            "fileChange",
            "fileSave",
            "fileCreate",
            "fileDelete"
        ],
        "options": {
            "cleanBeforeCompile": true,
            "parallelExecution": true,
            "maxMemory": "2048m",
            "stacktrace": true
        }
    },
    "autoFix": {
        "enabled": true,
        "rules": [
            {
                "type": "importMissing",
                "action": "autoAdd",
                "scope": ["java", "kotlin"]
            },
            {
                "type": "methodMissing",
                "action": "autoImplement",
                "scope": ["java", "kotlin"]
            },
            {
                "type": "resourceReference",
                "action": "autoFix",
                "scope": ["xml", "java", "kotlin"]
            },
            {
                "type": "typeConversion",
                "action": "autoFix",
                "scope": ["java", "kotlin"]
            }
        ]
    },
    "codeStyle": {
        "java": {
            "indentation": "4 spaces",
            "lineLength": 100,
            "braces": "same line"
        }
    },
    "logging": {
        "required": true,
        "language": "中文",
        "format": {
            "timestamp": true,
            "thread": true,
            "level": true,
            "context": true
        }
    },
    "errorHandling": {
        "required": true,
        "maxRetries": 3,
        "preserveExisting": true
    },
    "ignorePatterns": [
        "The declared package \"com.blackharry.androidcleaner\" does not match the expected package"
    ]
} 